<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">


    <View
        android:id="@+id/vrVista1"
        android:layout_width="391dp"
        android:layout_height="612dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trTitle" />

    <TextView
        android:id="@+id/trTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:text="@string/registros"
        android:textColor="#2c1f3d"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eNombre"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"

        android:background="@drawable/bg3"
        android:hint="@string/nombre"
        android:textAlignment="center"
        android:textColor="#28336C"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toTopOf="@+id/trTitle" />

    <TextView
        android:id="@+id/tvCaracterizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Caraterización"
        android:textColor="@color/azure"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/eRepContraseña" />

    <EditText
        android:id="@+id/eCorreo"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg3"
        android:hint="@string/correo"

        android:textAlignment="center"
        android:textColor="#28336C"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/spGenero" />

    <EditText
        android:id="@+id/eContraseña"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg3"

        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#28336C"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/eCorreo" />

    <EditText
        android:id="@+id/eRepContraseña"
        android:layout_width="319dp"
        android:layout_height="44dp"

        android:layout_marginTop="12dp"
        android:background="@drawable/bg3"
        android:hint="@string/repcontraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#28336C"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/eContraseña" />

    <TextView
        android:id="@+id/tvFechaNacimiento"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg3"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/eNombre" />

    <Button
        android:id="@+id/bButon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg"
        android:text="@string/registros"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vrVista1"
        app:layout_constraintVertical_bias="0.869" />

    <Button
        android:id="@+id/bCancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg2"
        android:onClick="Cancelar"
        android:text="@string/bCancelar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toEndOf="@+id/bButon"
        app:layout_constraintTop_toBottomOf="@+id/vrVista1"
        app:layout_constraintVertical_bias="0.869" />

    <Spinner
        android:id="@+id/spGenero"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg3"
        android:entries="@array/genero"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaNacimiento" />

    <CheckBox
        android:id="@+id/cbRespiratoria"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:text="Enfermedades respiratorias"
        android:textColor="@color/aliceblue"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/tvCaracterizacion" />

    <CheckBox
        android:id="@+id/cbCardioVascular"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:text="Enfermedades cardio-vasculares"
        android:textColor="@color/aliceblue"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/cbRespiratoria" />

    <CheckBox
        android:id="@+id/cbCutanea"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:text="Enfermedades cutaneas"
        android:textColor="@color/aliceblue"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/cbCardioVascular" />

    <CheckBox
        android:id="@+id/cbDeportista"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:text="Deportista"
        android:textColor="@color/aliceblue"
        app:layout_constraintEnd_toEndOf="@+id/vrVista1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/vrVista1"
        app:layout_constraintTop_toBottomOf="@+id/cbCutanea" />

</android.support.constraint.ConstraintLayout>